<header></header>

<h2>Nuevo Comic</h2>

<form action="/comics/createComic" method="post">
    <fieldset>
        <legend>Añadir comic</legend>
        <label for="categoria">Categoría</label>
        <input type="text" name="categoria">
        <label for="coleccion">Colección</label>
        <input type="text" name="coleccion">
        
        <label for="rutafoto">Foto</label>
        <input type="image" src="" alt="">

        <label for="genero">Género</label>
        <input type="text" name="genero">
        <label for="autor">Autor</label>
        <input type="text" name="autor">
        <label for="fecha">Fecha</label>
        <input type="date" name="fecha">
        <label for="numerotomo">Tomo</label>
        <input type="number" name="numerotomo">
        <label for="prestado">Prestado</label>
        <input type="radio" name="prestado">
        <label for="resumen">Resumen</label>
        <textarea name="resumen" cols="30" rows="10"></textarea>

        <input type="submit" value="Crear Comic">
    </fieldset>
</form>

<footer></footer>









